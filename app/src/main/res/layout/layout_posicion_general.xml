<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="16px"
            android:paddingBottom="16px">
            <TextView
                android:id="@+id/titulo_pos_gen"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/titulo_pos_gen"
                android:textSize="24sp"/>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:text="@string/lb_fecha_act_pos_gen"
                    android:textSize="24sp"/>
                <TextView
                    android:id="@+id/fecha_act_pos_gen"
                    android:layout_width="wrap_content"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="12/12/2016"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/saldo_pos_gen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:textStyle="bold"
            android:paddingLeft="100px"
            android:paddingTop="16px"
            android:paddingBottom="16px"
            android:text="253,89"/>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="vertical"
                android:background="#51fa51"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:paddingTop="16px"
                android:paddingBottom="16px"
                android:layout_weight="1">
                <TextView
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ingresos"
                    android:textAlignment="center"
                    android:paddingTop="16px"
                    android:paddingBottom="16px"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/pg_total_ingresos"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1154,90"
                    android:textSize="24sp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="#f95454"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="16px"
                android:paddingBottom="16px">
                <TextView
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gastos"
                    android:textAlignment="center"
                    android:paddingTop="16px"
                    android:paddingBottom="16px"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/pg_total_gastos"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1001,90"
                    android:textSize="24sp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="#ebfa60"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="16px"
                android:paddingBottom="16px">
                <TextView
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ahorro"
                    android:textAlignment="center"
                    android:paddingTop="16px"
                    android:paddingBottom="16px"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/pg_total_ahorro"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1054,90"
                    android:textSize="24sp"/>
            </LinearLayout>
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.CardView>