<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="5dp"
        card_view:cardCornerRadius="@dimen/card_album_radius">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingBottom="16dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/titulo_pos_gen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/titulo_pos_gen"
                    android:paddingBottom="8dp"
                    android:textSize="@dimen/text_subheading"/>
                <TextView
                    android:id="@+id/saldo_pos_gen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_headline"
                    fontPath="fonts/Roboto-Medium.ttf"
                    android:paddingBottom="16dp"
                    android:text="253,89"
                    android:layout_below="@id/titulo_pos_gen"/>
                <TextView
                    android:id="@+id/saldo_prev_pos_gen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(1154.90)"
                    android:textSize="@dimen/text_caption"
                    android:paddingLeft="16dp"
                    android:paddingBottom="16dp"
                    android:paddingTop="10dp"
                    android:layout_below="@id/titulo_pos_gen"
                    android:layout_toRightOf="@id/saldo_pos_gen"
                    android:layout_alignBottom="@id/saldo_pos_gen"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/fecha_act_pos_gen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_subheading"
                    fontPath="fonts/Roboto-Medium.ttf"
                    android:text="12/12/2016"
                    android:paddingRight="8dp"
                    android:paddingBottom="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@id/saldo_pos_gen"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">
                    <TextView
                        android:id="@+id/pg_lv_ingresos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ingresos"
                        android:paddingBottom="8dp"
                        android:textSize="@dimen/text_body_1"/>
                    <TextView
                        android:id="@+id/pg_total_ingresos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1154.90"
                        android:paddingBottom="6dp"
                        android:textSize="@dimen/text_subheading"
                        android:layout_below="@id/pg_lv_ingresos"/>
                    <TextView
                        android:id="@+id/pg_prev_ingresos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(1154.90)"
                        android:textSize="@dimen/text_caption"
                        android:layout_below="@id/pg_total_ingresos"
                        android:textColor="@color/colorPrimaryDark"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">
                    <TextView
                        android:id="@+id/pg_lv_gastos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gastos"
                        android:paddingBottom="8dp"
                        android:textSize="@dimen/text_body_1"/>
                    <TextView
                        android:id="@+id/pg_total_gastos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="6dp"
                        android:text="1001.90"
                        android:textSize="@dimen/text_subheading"
                        android:layout_below="@id/pg_lv_gastos"/>
                    <TextView
                        android:id="@+id/pg_prev_gastos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(654.90)"
                        android:textSize="@dimen/text_caption"
                        android:layout_below="@id/pg_total_gastos"
                        android:textColor="@color/colorPrimaryDark"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">
                    <TextView
                        android:id="@+id/pg_lv_ahorro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ahorro"
                        android:paddingBottom="8dp"
                        android:textSize="@dimen/text_body_1"/>
                    <TextView
                        android:id="@+id/pg_total_ahorro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="6dp"
                        android:text="354.90"
                        android:textSize="@dimen/text_subheading"
                        android:layout_below="@id/pg_lv_ahorro"/>
                    <TextView
                        android:id="@+id/pg_prev_ahorro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(354.90)"
                        android:textSize="@dimen/text_caption"
                        android:layout_below="@id/pg_total_ahorro"
                        android:textColor="@color/colorPrimaryDark"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>